@model Dal.Context.Department

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md6">
        <h3>Aşağıdaki kayıt silinecektir. Emin misiniz?</h3>
        <div>
            <h4 style="color:#FC8213;">Department Silme</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.departmentName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.departmentName)
                </dd>
            </dl>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Sil" class="btn btn-danger" /> |
                    @Html.ActionLink("Anasayfa", "Index", null, new { @class = "btn", @style = "background-color:#FC8213;color:white" })
                </div>
            }
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @if (ViewBag.Error != null)
                {
                    <p class="alert-danger">@ViewBag.Error</p>
                }
            </div>
        </div>
    </div>
</div>

